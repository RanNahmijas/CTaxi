@model IEnumerable<CTaxi.Models.DriverModels>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add new driver", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("Licence number")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Lastname")
        </th>
        <th>
            @Html.DisplayName("Applying date")
        </th>
        <th>
            @Html.DisplayName("Eye check date")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Time in the company")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {    

    if (item.TimeAfterEyeCheck == 5)
    {
       <tr style="Background-color:#ED5139">
        <td>
            @Html.DisplayFor(modelItem => item.LicenceNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplyingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastEyeCheck)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeniorityInDays)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { licenceNum = item.LicenceNum }) |            
            @Html.ActionLink("Delete", "Delete", new { licenceNum = item.LicenceNum })
        </td>
    </tr> 
    }
    else if (item.TimeAfterEyeCheck >= 6)
    {
        <tr style="Background-color:#58CAED">
        <td>
            @Html.DisplayFor(modelItem => item.LicenceNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplyingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastEyeCheck)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeniorityInDays)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { licenceNum = item.LicenceNum }) |            
            @Html.ActionLink("Delete", "Delete", new { licenceNum = item.LicenceNum })
        </td>
    </tr>    
    }
    else
    {
        <tr style="Background-color:#fff">
        <td>
            @Html.DisplayFor(modelItem => item.LicenceNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplyingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastEyeCheck)
        </td>
